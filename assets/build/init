#!/bin/bash
set -e

VUFIND_HOME="/usr/local/vufind2"
BUILD_DIR="/app/build"
LOG_DIR="/var/log"

for i in `ls -A ${BUILD_DIR}`; do

    if [ "$i" == "init" ]; then continue;fi

    echo "Building $i..."

    source "${BUILD_DIR}/$i"
done

# cleanup
rm -rf /var/lib/apt/lists/*
rm -rf /var/cache/apt/archives/*
